{% extends "SalitaPacienteBundle::base.html.twig" %}

{% block contenido %}
  {% if aplicaciones|length > 0 %}
    <h3>Aplicaciones de vacuna</h3>
    <table>
      <thead><tr><th>Vacuna</th><th>Fecha</th></tr></thead>
      <tbody>
        {% for aplicacion in aplicaciones %}
          <div class="aplicacionVacuna">  
            <tr><td>{{aplicacion.nombre}}</td><td>{{aplicacion.fecha}}</td></tr>
          </div>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h4 id="nota">- No hay aplicaciones de vacunas -</h4>
  {% endif %}
{% endblock %}