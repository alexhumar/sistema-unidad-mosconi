{# Codigo para generar un widget de un form de forma personalizada, con su label y errores incluidos.
   Se expuso para ser usado globalmente en app/config.yml, bajo la seccion twig. #}

{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form, { 'attr': { 'class': 'form-control' } }) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form %}
{% spaceless %}
    {{ form_start(form, { 'attr': { 'class': 'form-inline', 'role': 'form' } }) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
{% endspaceless %}
{% endblock form %}