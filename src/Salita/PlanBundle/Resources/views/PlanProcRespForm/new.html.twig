{% extends "SalitaPlanBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    <h3>Alta de plan procreacion responsable</h3>
    <br/>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.periodicidad, { 'attr': { 'placeholder': 'Periodicidad de entrega (valor num√©rico)' } }) }}
      </div>
      <div class="form-group col-sm-12">
        {{ form_row(form.metodoAnticonceptivo) }}
      </div>
      <div class="form-group col-sm-7">
        <div class="col-sm-offset-6">
          {{ form_row(form.guardar) }}
          {{ form_row(form.guardarynuevo) }}
        </div>
      </div>
    {{ form_end(form) }}

	{% for flashMessage in app.session.flashbag.get('mensaje') %}
		<div class="alert alert-success" role="alert">
			{{ flashMessage }}
		</div>
	{% endfor %}
{% endblock %}