{% extends "TurnoBundle::base.html.twig" %}

{% block contenido %}
<form action="{{ path('seleccion_fecHor_futuro') }}" method="post" {{ form_enctype(form) }}>
  <div id="fechasB">
    <label> Fecha: </label>
        {{ form_row(form.dia) }} {{ form_row(form.mes) }} {{ form_row(form.anio) }}
    <br />
    <label> Hora </label>
        {{ form_row(form.hora) }} {{ form_row(form.minutos) }}
    <br />
    {{ form_rest(form) }}
    <input type="submit" />
  </div>
</form>
{% endblock %}