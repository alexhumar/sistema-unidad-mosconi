  <h3>Modificación de contraseña</h3>
  </br>
  {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group col-sm-12">
      {{ form_row(form.current_password, { 'attr': { 'placeholder': 'Ingrese la contraseña actual' } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.new.first, { 'attr': { 'placeholder': 'Ingrese la nueva contraseña' } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.new.second, { 'attr': { 'placeholder': 'Repita la nueva contraseña' } }) }}
    </div>
    <div class="form-group col-sm-8">
      <div class="col-sm-offset-6">
        {{ form_row(form.cambiarPassword) }}
      </div>
    </div>
  {{ form_end(form) }}