<h3>Registro de usuario</h3>
</br
{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group col-sm-8">
      {{ form_row(form.email, { 'attr': { 'placeholder': 'Correo electronico del usuario' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.username, { 'attr': { 'placeholder': 'Nombre de usuario para la cuenta' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.plainPassword, { 'attr': { 'placeholder': 'Contrase√±a' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.nombre, { 'attr': { 'placeholder': 'Nombre completo' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.apellido, { 'attr': { 'placeholder': 'Apellido' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.telefono, { 'attr': { 'placeholder': 'Telefono' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.matricula, { 'attr': { 'placeholder': 'Matricula (en caso de ser medico)' } }) }}
    </div>
    <div class="form-group col-sm-8">
      <div class="col-sm-offset-6">
        {{ form_row(form.registrar) }}
      </div>
    </div>
{{ form_end(form) }}
