{# 
   Voy a tener que generar asi cada form para poder customizar el atributo col-sm, que es diferente para cada
   form.
 #}

{# 
   IMPORTANTE: notar el uso de first y second en plainPassword. Esto se debe a que en el RegistrationFormType
   de FosUserBundle, plainPassword se genera como repeated. Es por eso que para acceder individualmente a cada
   input que se genera se utiliza el nombre del campo seguido de first o second.
#}
<h3>Registro de usuario</h3>
</br>

  {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group col-sm-8">
      {{ form_row(form.email, { 'attr': { 'placeholder': 'Correo electronico del usuario' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.username, { 'attr': { 'placeholder': 'Nombre de usuario para la cuenta' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.plainPassword.first, { 'attr': { 'placeholder': 'Ingrese la contraseña' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.plainPassword.second, { 'attr': { 'placeholder': 'Repita la contraseña' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.nombre, { 'attr': { 'placeholder': 'Nombre completo' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.apellido, { 'attr': { 'placeholder': 'Apellido' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.telefono, { 'attr': { 'placeholder': 'Telefono' } }) }}
    </div>
    <div class="form-group col-sm-8">
      {{ form_row(form.matricula, { 'attr': { 'placeholder': 'Matricula (en caso de ser medico)' } }) }}
    </div>
    <div class="form-group col-sm-8">
      <div class="col-sm-offset-6">
        {{ form_row(form.registrar) }}
      </div>
    </div>
{{ form_end(form) }}